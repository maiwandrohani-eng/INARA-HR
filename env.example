# INARA HRIS - Environment Configuration Template
# Copy this file to apps/api/.env and fill in your actual values

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://inara_user:your_password_here@localhost:5432/inara_hris
DATABASE_ASYNC_URL=postgresql+asyncpg://inara_user:your_password_here@localhost:5432/inara_hris

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Security Configuration
# ============================================
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Environment
# ============================================
ENVIRONMENT=production
DEBUG=False
API_VERSION=v1
API_PREFIX=/api/v1

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins (no spaces)
CORS_ORIGINS=["https://your-domain.com","https://www.your-domain.com"]

# ============================================
# File Storage (S3-Compatible)
# ============================================
# Leave empty to use local filesystem storage
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
S3_REGION=nyc3

# ============================================
# Email Configuration
# ============================================
SEND_EMAILS=True
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_USE_TLS=True
FROM_EMAIL=noreply@inara.org
FROM_NAME=INARA HR System
APP_URL=https://your-domain.com

# Legacy SMTP fields (backward compatibility)
SMTP_USER=your-email@gmail.com
SMTP_FROM=noreply@inara.org

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_AUTH_PER_MINUTE=5

# ============================================
# File Upload Limits
# ============================================
MAX_FILE_SIZE_MB=10

# ============================================
# Request Timeouts
# ============================================
REQUEST_TIMEOUT_SECONDS=30
UPLOAD_TIMEOUT_SECONDS=300

# ============================================
# Error Tracking (Sentry)
# ============================================
# Optional: Get your DSN from https://sentry.io
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# Organization Configuration
# ============================================
ORG_NAME=INARA
ORG_TIMEZONE=UTC
DEFAULT_COUNTRY=US

# ============================================
# Pagination
# ============================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

